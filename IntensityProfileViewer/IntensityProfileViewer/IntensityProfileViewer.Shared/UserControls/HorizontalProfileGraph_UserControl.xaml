<UserControl
    x:Class="IntensityProfileViewer.HorizontalProfileGraph_UserControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:IntensityProfileViewer"
    xmlns:skia="using:SkiaSharp.Views.UWP"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="300"
    d:DesignWidth="800"
    x:DefaultBindMode="OneWay"
>

  <!-- Not necessary to have a 'Grid' here as the parent -->

  <!-- Width=Auto not necessary here ; Width=Auto is usually used for a Container, not for a contained element ... -->

  <skia:SKXamlCanvas 
    x:Name="m_skiaCanvas"
    HorizontalAlignment="Stretch"
    VerticalAlignment="Stretch"
    Background="{StaticResource Brush_SHOULD_NOT_BE_VISIBLE}"
  />

</UserControl>
